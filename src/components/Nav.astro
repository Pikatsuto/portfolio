---
import ThemeToggle from "./ThemeToggle";
import GlobalSearch from "./GlobalSearch";
import Icon from "./Icon.astro";

interface Props {
  currentPath: string;
  isAdmin?: boolean;
  maintenance?: boolean;
  searchPosts?: Array<{ id: string; title: string; excerpt: string; cat: string; visible: boolean }>;
}

const { currentPath, isAdmin = false, maintenance = false, searchPosts = [] } = Astro.props;

const links = [
  { label: "Portfolio", href: "/" },
  { label: "Articles", href: "/blog" },
  { label: "Docs", href: "/docs" },
];
---

{maintenance && isAdmin && (
  <div class="maintenance-banner">
    <Icon name="wrench" size={14} /> Mode maintenance actif — les visiteurs voient la page de maintenance.
  </div>
)}

<nav class="nav">
  <a href="/" class="logo">Gabriel Guillou<span class="logo-dot">.</span></a>
  <div class="nav-right">
    {!(maintenance && !isAdmin) && links.map(({ label, href }) => (
      <a
        href={href}
        class:list={["nav-link", { active: currentPath === href || (href !== "/" && currentPath.startsWith(href)) }]}
      >
        {label}
      </a>
    ))}
    {isAdmin && <div class="nav-divider" />}
    {isAdmin && (
      <a
        href="/admin/blog"
        class:list={["nav-link", { active: currentPath === "/admin/blog" }]}
      >
        Admin Articles
      </a>
    )}
    {isAdmin && (
      <a
        href="/admin/docs"
        class:list={["nav-link", { active: currentPath === "/admin/docs" }]}
      >
        Admin Docs
      </a>
    )}
    {!(maintenance && !isAdmin) && <div class="nav-divider" />}
    <GlobalSearch client:load posts={searchPosts} />
    <ThemeToggle client:load />
    {isAdmin && (
      <button id="maintenance-btn" class:list={["maint-btn", { active: maintenance }]}>
        <Icon name="wrench" size={14} /> {maintenance ? "ON" : "OFF"}
      </button>
    )}
    {isAdmin ? (
      <button id="admin-btn" class="admin-btn">Déconnexion</button>
    ) : (
      <a href="/admin/login" class="login-btn">Login</a>
    )}
  </div>
  <div class="nav-mobile-right">
    <GlobalSearch client:load posts={searchPosts} />
    <ThemeToggle client:load />
    <button class="burger" id="burger-btn" aria-label="Menu">
      <span class="burger-icon"><Icon name="menu" size={20} /></span>
    </button>
  </div>
</nav>

<!-- Mobile drawer -->
<div class="nav-mobile-panel" id="mobile-panel">
  <div class="mobile-backdrop" id="mobile-backdrop"></div>
  <div class="mobile-drawer">
    {!(maintenance && !isAdmin) && links.map(({ label, href }) => (
      <a
        href={href}
        class:list={["mobile-link", { active: currentPath === href || (href !== "/" && currentPath.startsWith(href)) }]}
      >
        {label}
      </a>
    ))}
    {isAdmin && <div class="mobile-divider" />}
    {isAdmin && (
      <a
        href="/admin/blog"
        class:list={["mobile-link", { active: currentPath === "/admin/blog" }]}
      >
        Admin Articles
      </a>
    )}
    {isAdmin && (
      <a
        href="/admin/docs"
        class:list={["mobile-link", { active: currentPath === "/admin/docs" }]}
      >
        Admin Docs
      </a>
    )}
    <div class="mobile-spacer" />
    <div class="mobile-divider" />
    {isAdmin ? (
      <div class="mobile-admin-footer">
        <span class="mobile-admin-label">Admin :</span>
        <div class="mobile-admin-actions">
          <button id="maintenance-btn-mobile" class:list={["maint-btn-round", { active: maintenance }]}>
            <Icon name="wrench" size={14} />
          </button>
          <button id="admin-btn-mobile" class="mobile-logout-btn">Déconnexion</button>
        </div>
      </div>
    ) : (
      <a href="/admin/login" class="login-btn">Login</a>
    )}
  </div>
</div>

<script is:inline>
  // Burger toggle
  (function() {
    const burger = document.getElementById("burger-btn");
    const panel = document.getElementById("mobile-panel");
    if (!burger || !panel) return;

    var menuSvg = '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/></svg>';
    var closeSvg = '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>';

    function openPanel() {
      panel.classList.remove("closing");
      panel.classList.add("open");
      burger.querySelector(".burger-icon").innerHTML = closeSvg;
      document.body.style.overflow = "hidden";
    }

    function closePanel() {
      if (!panel.classList.contains("open") || panel.classList.contains("closing")) return;
      panel.classList.add("closing");
      burger.querySelector(".burger-icon").innerHTML = menuSvg;
      document.body.style.overflow = "";
      setTimeout(function() {
        panel.classList.remove("open", "closing");
      }, 150);
    }

    burger.addEventListener("click", () => {
      if (panel.classList.contains("open") && !panel.classList.contains("closing")) {
        closePanel();
      } else {
        openPanel();
      }
    });

    // Close panel on link click
    panel.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", closePanel);
    });

    // Close panel on backdrop click
    document.getElementById("mobile-backdrop")?.addEventListener("click", closePanel);
  })();
</script>

{isAdmin && (
  <script is:inline>
    document.getElementById("admin-btn")?.addEventListener("click", async () => {
      await fetch("/api/auth/logout", { method: "POST" });
      window.location.href = "/";
    });
    document.getElementById("admin-btn-mobile")?.addEventListener("click", async () => {
      await fetch("/api/auth/logout", { method: "POST" });
      window.location.href = "/";
    });
    function handleMaintToggle(btn) {
      if (!btn) return;
      btn.addEventListener("click", async () => {
        const isActive = btn.classList.contains("active");
        const res = await fetch("/api/settings", {
          method: "PUT",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ maintenance: !isActive }),
        });
        if (res.ok) window.location.reload();
      });
    }
    handleMaintToggle(document.getElementById("maintenance-btn"));
    handleMaintToggle(document.getElementById("maintenance-btn-mobile"));
  </script>
)}

<style>
  .maintenance-banner {
    background: rgba(245, 158, 11, 0.1);
    border-bottom: 1px solid rgba(245, 158, 11, 0.3);
    padding: 0.4rem 3rem;
    text-align: center;
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-xs);
    color: rgb(245, 158, 11);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.4rem;
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--nav-height);
    flex-shrink: 0;
    padding: 0 3rem;
    border-bottom: 1px solid var(--line);
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--nav-bg);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }

  .logo {
    font-family: 'Playfair Display', serif;
    font-size: var(--fs-h2);
    font-weight: 700;
    color: var(--white);
    text-decoration: none;
    cursor: pointer;
  }

  .logo-dot {
    color: var(--blue);
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-link {
    background: none;
    border: none;
    color: var(--tertiary);
    cursor: pointer;
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-sm);
    font-weight: 500;
    position: relative;
    padding: 0.3rem 0;
    transition: color 0.3s;
    text-decoration: none;
  }

  .nav-link:hover {
    color: var(--white);
  }

  .nav-link.active {
    color: var(--white);
  }

  .nav-link.active::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--blue);
  }

  .nav-divider {
    width: 1px;
    height: 18px;
    background: var(--line);
  }

  .login-btn {
    background: transparent;
    border: 1px solid var(--line);
    color: var(--tertiary);
    padding: 0.3rem 0.8rem;
    cursor: pointer;
    font-size: var(--fs-xs);
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    border-radius: 4px;
    text-decoration: none;
    transition: color 0.2s, border-color 0.2s;
  }

  .login-btn:hover {
    border-color: var(--blue);
    color: var(--blue-hover);
  }

  .admin-btn {
    background: color-mix(in srgb, var(--green) 15%, transparent);
    border: 1px solid color-mix(in srgb, var(--green) 27%, transparent);
    color: var(--green);
    padding: 0.3rem 0.8rem;
    cursor: pointer;
    font-size: var(--fs-xs);
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    border-radius: 4px;
    transition: background 0.2s;
  }

  .admin-btn:hover {
    background: color-mix(in srgb, var(--green) 25%, transparent);
  }

  .maint-btn {
    background: transparent;
    border: 1px solid var(--line);
    color: var(--tertiary);
    padding: 0.3rem 0.8rem;
    cursor: pointer;
    font-size: var(--fs-xs);
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    border-radius: 4px;
    transition: color 0.2s, border-color 0.2s, background 0.2s;
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }

  .maint-btn:hover {
    border-color: rgba(245, 158, 11, 0.4);
    color: rgb(245, 158, 11);
  }

  .maint-btn.active {
    background: rgba(245, 158, 11, 0.1);
    border-color: rgba(245, 158, 11, 0.3);
    color: rgb(245, 158, 11);
  }

  /* ─── Burger button (hidden by default) ─── */
  .nav-mobile-right {
    display: none;
    align-items: center;
    gap: 1rem;
  }

  .burger {
    background: none;
    border: none;
    color: var(--white);
    font-size: var(--fs-h2);
    cursor: pointer;
    padding: 0.2rem;
    line-height: 1;
  }

  /* ─── Mobile drawer ─── */
  .nav-mobile-panel {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 99;
  }

  .nav-mobile-panel.open {
    display: flex;
  }

  .mobile-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    animation: backdropFadeIn 0.2s ease-out forwards;
  }

  .nav-mobile-panel.closing .mobile-backdrop {
    animation: backdropFadeOut 150ms ease-in forwards;
  }

  @keyframes backdropFadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .mobile-drawer {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 280px;
    max-width: 80vw;
    background: var(--surface);
    border-left: 1px solid var(--line);
    padding: calc(var(--nav-height) + 1rem) 1.5rem 1.5rem;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
    animation: slideIn 0.2s ease-out;
  }

  .nav-mobile-panel.closing .mobile-drawer {
    animation: slideOut 150ms ease-in forwards;
  }

  @keyframes slideOut {
    from { transform: translateX(0); }
    to { transform: translateX(100%); }
  }

  @keyframes backdropFadeOut {
    from { opacity: 1; }
    to { opacity: 0; }
  }

  @keyframes slideIn {
    from { transform: translateX(100%); }
    to { transform: translateX(0); }
  }

  .mobile-link {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-body);
    font-weight: 500;
    color: var(--tertiary);
    text-decoration: none;
    padding: 0.6rem 0;
    transition: color 0.2s;
  }

  .mobile-link:hover {
    color: var(--white);
  }

  .mobile-link.active {
    color: var(--blue-hover);
  }

  .mobile-spacer {
    flex: 1;
  }

  .mobile-divider {
    height: 1px;
    background: var(--line);
    margin: 0.3rem 0;
  }

  .mobile-admin-footer {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.3rem 0;
  }

  .mobile-admin-label {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-xs);
    color: var(--tertiary);
    font-weight: 500;
  }

  .mobile-admin-actions {
    margin-left: auto;
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  .maint-btn-round {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: 1px solid var(--line);
    background: transparent;
    color: var(--tertiary);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: color 0.2s, border-color 0.2s, background 0.2s;
  }

  .maint-btn-round:hover {
    border-color: rgba(245, 158, 11, 0.4);
    color: rgb(245, 158, 11);
  }

  .maint-btn-round.active {
    background: rgba(245, 158, 11, 0.1);
    border-color: rgba(245, 158, 11, 0.3);
    color: rgb(245, 158, 11);
  }

  .mobile-logout-btn {
    background: color-mix(in srgb, var(--green) 15%, transparent);
    border: 1px solid color-mix(in srgb, var(--green) 27%, transparent);
    color: var(--green);
    padding: 0.3rem 0.8rem;
    cursor: pointer;
    font-size: var(--fs-xs);
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    border-radius: 4px;
    transition: background 0.2s;
  }

  .mobile-logout-btn:hover {
    background: color-mix(in srgb, var(--green) 25%, transparent);
  }

  /* ─── Tablet / burger menu: ≤ 1280px ─── */
  @media (max-width: 1280px) {
    .nav {
      padding: 0 1.2rem;
    }

    .nav-right {
      display: none;
    }

    .nav-mobile-right {
      display: flex;
    }

    .maintenance-banner {
      padding: 0.4rem 1.2rem;
    }
  }
</style>