---
import ThemeToggle from "./ThemeToggle";

interface Props {
  currentPath: string;
  isAdmin?: boolean;
  maintenance?: boolean;
}

const { currentPath, isAdmin = false, maintenance = false } = Astro.props;

const links = [
  { label: "Portfolio", href: "/" },
  { label: "Blog", href: "/blog" },
  { label: "Docs", href: "/docs" },
];
---

{maintenance && isAdmin && (
  <div class="maintenance-banner">
    üîß Mode maintenance actif ‚Äî les visiteurs voient la page de maintenance.
  </div>
)}

<nav class="nav">
  <a href="/" class="logo">Gabriel<span class="logo-dot">.</span></a>
  <div class="nav-right">
    {links.map(({ label, href }) => (
      <a
        href={href}
        class:list={["nav-link", { active: currentPath === href || (href !== "/" && currentPath.startsWith(href)) }]}
      >
        {label}
      </a>
    ))}
    {isAdmin && <div class="nav-divider" />}
    {isAdmin && (
      <a
        href="/admin/blog"
        class:list={["nav-link", { active: currentPath === "/admin/blog" }]}
      >
        Admin Blog
      </a>
    )}
    {isAdmin && (
      <a
        href="/admin/docs"
        class:list={["nav-link", { active: currentPath === "/admin/docs" }]}
      >
        Admin Docs
      </a>
    )}
    <div class="nav-divider" />
    <ThemeToggle client:load />
    {isAdmin ? (
      <button id="admin-btn" class="admin-btn">‚óè Admin</button>
    ) : (
      <a href="/admin/login" class="login-btn">Login</a>
    )}
  </div>
</nav>

{isAdmin && (
  <script is:inline>
    document.getElementById("admin-btn")?.addEventListener("click", async () => {
      await fetch("/api/auth/logout", { method: "POST" });
      window.location.href = "/";
    });
  </script>
)}

<style>
  .maintenance-banner {
    background: rgba(245, 158, 11, 0.1);
    border-bottom: 1px solid rgba(245, 158, 11, 0.3);
    padding: 0.4rem 3rem;
    text-align: center;
    font-family: 'DM Sans', sans-serif;
    font-size: 0.8rem;
    color: rgb(245, 158, 11);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.2rem 3rem;
    border-bottom: 1px solid var(--line);
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--nav-bg);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }

  .logo {
    font-family: 'Playfair Display', serif;
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--white);
    text-decoration: none;
    cursor: pointer;
  }

  .logo-dot {
    color: var(--blue);
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-link {
    background: none;
    border: none;
    color: var(--tertiary);
    cursor: pointer;
    font-family: 'DM Sans', sans-serif;
    font-size: 0.9rem;
    font-weight: 500;
    position: relative;
    padding: 0.3rem 0;
    transition: color 0.3s;
    text-decoration: none;
  }

  .nav-link:hover {
    color: var(--white);
  }

  .nav-link.active {
    color: var(--white);
  }

  .nav-link.active::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--blue);
  }

  .nav-divider {
    width: 1px;
    height: 18px;
    background: var(--line);
  }

  .login-btn {
    background: transparent;
    border: 1px solid var(--line);
    color: var(--tertiary);
    padding: 0.3rem 0.8rem;
    cursor: pointer;
    font-size: 0.75rem;
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    border-radius: 4px;
    text-decoration: none;
    transition: color 0.2s, border-color 0.2s;
  }

  .login-btn:hover {
    border-color: var(--blue);
    color: var(--blue-hover);
  }

  .admin-btn {
    background: color-mix(in srgb, var(--green) 15%, transparent);
    border: 1px solid color-mix(in srgb, var(--green) 27%, transparent);
    color: var(--green);
    padding: 0.3rem 0.8rem;
    cursor: pointer;
    font-size: 0.75rem;
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    border-radius: 4px;
    transition: background 0.2s;
  }

  .admin-btn:hover {
    background: color-mix(in srgb, var(--green) 25%, transparent);
  }
</style>