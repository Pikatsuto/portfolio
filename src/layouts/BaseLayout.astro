---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import { db } from "../db";
import { posts, categories } from "../db/schema";
import { eq } from "drizzle-orm";

interface Props {
  title: string;
  description?: string;
  fullHeight?: boolean;
}

const { title, description = "Portfolio de Gabriel Guillou â€” DevOps, Sysadmin, Full-Stack", fullHeight = false } = Astro.props;
const currentPath = Astro.url.pathname;
const canonicalUrl = new URL(currentPath, Astro.site).href;
const isAdmin = Astro.locals.isAdmin;
const maintenance = Astro.locals.maintenance;

// Fetch posts for global search
const searchPosts = await db
  .select({
    id: posts.id,
    title: posts.title,
    excerpt: posts.excerpt,
    cat: categories.name,
    visible: posts.visible,
  })
  .from(posts)
  .leftJoin(categories, eq(posts.categoryId, categories.id))
  .where(eq(posts.visible, true))
  .all();

const searchPostsSafe = searchPosts.map(p => ({ ...p, cat: p.cat ?? "" }));
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <link rel="canonical" href={canonicalUrl} />
    <script is:inline>
      (function() {
        var t = localStorage.getItem("theme");
        if (t === "dark" || t === "light") {
          document.documentElement.setAttribute("data-theme", t);
        } else if (window.matchMedia("(prefers-color-scheme: light)").matches) {
          document.documentElement.setAttribute("data-theme", "light");
        } else {
          document.documentElement.setAttribute("data-theme", "dark");
        }
      })();
    </script>
  </head>
  <body style={fullHeight ? "display: flex; flex-direction: column; height: 100vh; overflow: hidden;" : ""}>
    <Nav currentPath={currentPath} isAdmin={isAdmin} maintenance={maintenance} searchPosts={searchPostsSafe} />
    <slot />
    {!fullHeight && <Footer />}
  </body>
</html>
