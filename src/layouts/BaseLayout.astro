---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import { db } from "../db";
import { posts, categories } from "../db/schema";
import { eq } from "drizzle-orm";

interface Props {
  title: string;
  description?: string;
  fullHeight?: boolean;
  noindex?: boolean;
  ogType?: string;
  ogImage?: string;
}

const { title, description = "Portfolio de Gabriel Guillou â€” DevOps, Sysadmin, Full-Stack", fullHeight = false, noindex = false, ogType = "website", ogImage } = Astro.props;
const currentPath = Astro.url.pathname;
const canonicalUrl = new URL(currentPath, Astro.site).href;
const isAdmin = Astro.locals.isAdmin;
const maintenance = Astro.locals.maintenance;

// Fetch posts for global search
const searchPosts = await db
  .select({
    id: posts.id,
    title: posts.title,
    excerpt: posts.excerpt,
    cat: categories.name,
    visible: posts.visible,
  })
  .from(posts)
  .leftJoin(categories, eq(posts.categoryId, categories.id))
  .where(eq(posts.visible, true))
  .all();

const searchPostsSafe = searchPosts.map(p => ({ ...p, cat: p.cat ?? "" }));
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    <meta name="theme-color" content="#0c0c12" media="(prefers-color-scheme: dark)" />
    <meta name="theme-color" content="#f0f0f4" media="(prefers-color-scheme: light)" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:image" content={new URL(ogImage || "/og-image.png", Astro.site).href} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage || "/og-image.png", Astro.site).href} />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="preload" as="font" href="/fonts/source-serif-4-latin.woff2" type="font/woff2" crossorigin />
    <link rel="preload" as="font" href="/fonts/dm-sans-latin.woff2" type="font/woff2" crossorigin />
    <script is:inline>
      (function() {
        var t = localStorage.getItem("theme");
        if (t === "dark" || t === "light") {
          document.documentElement.setAttribute("data-theme", t);
        } else if (window.matchMedia("(prefers-color-scheme: light)").matches) {
          document.documentElement.setAttribute("data-theme", "light");
        } else {
          document.documentElement.setAttribute("data-theme", "dark");
        }
      })();
    </script>
  </head>
  <body style={fullHeight ? "display: flex; flex-direction: column; height: 100vh; overflow: hidden;" : ""}>
    <a href="#main-content" class="skip-link">Aller au contenu</a>
    <Nav currentPath={currentPath} isAdmin={isAdmin} maintenance={maintenance} searchPosts={searchPostsSafe} />
    <main id="main-content" style={fullHeight ? "flex: 1; overflow: hidden; display: flex; flex-direction: column;" : ""}>
      <slot />
    </main>
    {!fullHeight && <Footer />}
  </body>
</html>

<style>
  .skip-link {
    position: absolute;
    left: -9999px;
    top: 0;
    z-index: 9999;
    padding: 0.5rem 1rem;
    background: var(--blue);
    color: #fff;
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-sm);
    text-decoration: none;
    border-radius: 0 0 4px 0;
  }
  .skip-link:focus {
    left: 0;
  }
</style>
