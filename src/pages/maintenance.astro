---
import BaseLayout from "../layouts/BaseLayout.astro";
import Icon from "../components/Icon.astro";

// If admin, redirect to home (they bypass maintenance)
if (Astro.locals.isAdmin) {
  return Astro.redirect("/");
}
---

<BaseLayout title="Maintenance en cours — Gabriel Guillou" noindex>
  <div class="maintenance-page">
    <div class="maintenance-icon"><Icon name="wrench" size={48} /></div>
    <h1 class="maintenance-title">Maintenance en cours<span class="dot">.</span></h1>
    <p class="maintenance-text">
      Le site est temporairement indisponible pour maintenance. Revenez bientôt !
    </p>
  </div>
</BaseLayout>

<style>
  .maintenance-page {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - var(--nav-height));
    padding: 2rem 2rem 4rem;
    text-align: center;
  }

  .maintenance-icon {
    font-size: var(--fs-display);
    margin-bottom: 1.5rem;
  }

  .maintenance-title {
    font-family: 'Source Serif 4', serif;
    font-size: var(--fs-h1);
    font-weight: 700;
    color: var(--white);
    margin-bottom: 1rem;
  }

  .dot {
    color: var(--blue);
  }

  .maintenance-text {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-body-lg);
    color: var(--secondary);
    max-width: 480px;
    line-height: 1.8;
  }

  /* ─── Mobile ─── */
  @media (max-width: 768px) {
    .maintenance-page {
      padding: 2rem 1.2rem 4rem;
    }
  }
</style>