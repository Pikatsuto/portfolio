---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { db } from "../../db";
import { posts } from "../../db/schema";
import { eq } from "drizzle-orm";
import { renderMarkdown, extractTOC } from "../../lib/markdown";

const { slug } = Astro.params;
const post = await db.select().from(posts).where(eq(posts.id, slug!)).get();

if (!post || !post.visible) {
  return Astro.redirect("/blog");
}

const contentHtml = await renderMarkdown(post.content);
const toc = extractTOC(post.content);
---

<BaseLayout title={`${post.title} — Gabriel`}>
  <div class="article-page">
    <a href="/blog" class="back-btn">← Retour</a>

    <div class="article-header">
      <div class="article-meta">
        <span class="article-cat">{post.cat}</span>
        <span class="meta-dot" />
        <span class="article-info">{post.date} · {post.time}</span>
      </div>
      <h1 class="article-title">{post.title}</h1>
      <p class="article-excerpt">{post.excerpt}</p>
      {post.docProject && (
        <a href={`/docs/${post.docProject}`} class="doc-link-btn">
          Documentation {post.docProject} →
        </a>
      )}
    </div>

    {toc.length > 0 && (
      <div class="toc">
        <h4 class="toc-title">Sommaire</h4>
        {toc.map((t) => (
          <a href={`#${t.slug}`} class="toc-item">{t.text}</a>
        ))}
      </div>
    )}

    <div class="md-body" set:html={contentHtml} />
  </div>
</BaseLayout>

<style>
  .article-page {
    max-width: 1100px;
    width: 100%;
    margin: 0 auto;
    padding: 4rem 3rem 8rem;
  }

  .back-btn {
    background: none;
    border: none;
    color: var(--tertiary);
    cursor: pointer;
    font-family: 'DM Sans', sans-serif;
    font-size: 0.85rem;
    margin-bottom: 2rem;
    display: inline-block;
    text-decoration: none;
    transition: color 0.2s;
  }

  .back-btn:hover {
    color: var(--blue-hover);
  }

  .article-header {
    margin-bottom: 2.5rem;
  }

  .article-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-bottom: 1.2rem;
  }

  .article-cat {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.78rem;
    color: var(--blue);
    font-weight: 500;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .meta-dot {
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: var(--tertiary);
  }

  .article-info {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.82rem;
    color: var(--tertiary);
  }

  .article-title {
    font-family: 'Playfair Display', serif;
    font-size: 2.8rem;
    font-weight: 700;
    line-height: 1.2;
    color: var(--white);
    margin-bottom: 1.5rem;
  }

  .article-excerpt {
    font-family: 'DM Sans', sans-serif;
    color: var(--secondary);
    font-size: 1.1rem;
    line-height: 1.8;
    font-style: italic;
  }

  .doc-link-btn {
    display: inline-block;
    margin-top: 1rem;
    background: color-mix(in srgb, var(--blue) 3%, transparent);
    border: 1px solid color-mix(in srgb, var(--blue) 15%, transparent);
    color: var(--blue-hover);
    padding: 0.4rem 1rem;
    cursor: pointer;
    font-size: 0.8rem;
    font-family: 'DM Sans', sans-serif;
    border-radius: 5px;
    font-weight: 500;
    transition: background 0.2s;
    text-decoration: none;
  }

  .doc-link-btn:hover {
    background: color-mix(in srgb, var(--blue) 8%, transparent);
  }

  /* ─── TOC ─── */
  .toc {
    padding: 1.2rem 1.5rem;
    background: var(--surface);
    border: 1px solid var(--line);
    border-radius: 6px;
    margin-bottom: 3rem;
  }

  .toc-title {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.72rem;
    color: var(--tertiary);
    letter-spacing: 1.5px;
    text-transform: uppercase;
    margin-bottom: 0.8rem;
    font-weight: 500;
  }

  .toc-item {
    display: block;
    font-family: 'DM Sans', sans-serif;
    font-size: 0.88rem;
    color: var(--blue-hover);
    margin-bottom: 0.3rem;
    cursor: pointer;
    text-decoration: none;
    transition: color 0.2s;
  }

  .toc-item:hover {
    text-decoration: underline;
  }

  /* ─── MDX Body (same as portfolio) ─── */
  .md-body {
    font-family: 'DM Sans', sans-serif;
    color: var(--body);
    font-size: 1rem;
    line-height: 1.9;
  }

  .md-body :global(.md-h2) {
    font-family: 'Playfair Display', serif;
    color: var(--white);
    font-size: 1.4rem;
    font-weight: 600;
    margin: 2.5rem 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--line);
  }

  .md-body :global(.md-h3) {
    font-family: 'Playfair Display', serif;
    color: var(--white);
    font-size: 1.15rem;
    font-weight: 600;
    margin: 2rem 0 0.8rem;
  }

  .md-body :global(p) {
    margin-bottom: 0.8rem;
    line-height: 1.9;
  }

  .md-body :global(ul) {
    padding-left: 1.2rem;
    margin-bottom: 1.2rem;
  }

  .md-body :global(li) {
    margin-bottom: 0.4rem;
    color: var(--body);
    line-height: 1.8;
  }

  .md-body :global(strong) {
    color: var(--white);
    font-weight: 600;
  }

  .md-body :global(em) {
    font-style: italic;
  }

  .md-body :global(.md-inline-code) {
    background: var(--code-bg);
    border: 1px solid var(--line);
    padding: 0.1rem 0.35rem;
    border-radius: 3px;
    font-size: 0.88em;
    color: var(--blue-hover);
    font-family: 'JetBrains Mono', monospace;
  }

  .md-body :global(.md-code) {
    margin: 1.2rem 0;
    border-radius: 4px;
    overflow: hidden;
  }

  .md-body :global(.md-code pre) {
    background: var(--code-bg) !important;
    border: 1px solid var(--line);
    border-left: 3px solid var(--blue);
    padding: 1rem 1.3rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.84rem;
    line-height: 1.7;
    overflow-x: auto;
  }

  .md-body :global(.md-code-plain) {
    color: var(--blue-hover);
  }

  .md-body :global(.shiki span) {
    color: var(--s-dark) !important;
  }

  :root[data-theme="light"] .md-body :global(.shiki span) {
    color: var(--s-light) !important;
  }
</style>