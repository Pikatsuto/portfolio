---
import BaseLayout from "../../layouts/BaseLayout.astro";
import AdminBar from "../../components/AdminBar.astro";
import EditButton from "../../components/EditButton.astro";
import Icon from "../../components/Icon.astro";
import MermaidInit from "../../components/MermaidInit.astro";
import { db } from "../../db";
import { posts, categories, projects, docs, sections } from "../../db/schema";
import { eq } from "drizzle-orm";
import { renderMarkdown, extractTOC } from "../../lib/markdown";

const isAdmin = Astro.locals.isAdmin;
const { slug } = Astro.params;
const post = await db
  .select({
    id: posts.id,
    title: posts.title,
    date: posts.date,
    cat: categories.name,
    time: posts.time,
    excerpt: posts.excerpt,
    content: posts.content,
    draft: posts.draft,
    visible: posts.visible,
    docProject: projects.name,
  })
  .from(posts)
  .leftJoin(categories, eq(posts.categoryId, categories.id))
  .leftJoin(projects, eq(posts.docProjectId, projects.id))
  .where(eq(posts.id, slug!))
  .get();

if (!post || (!post.visible && !isAdmin)) {
  return Astro.redirect("/article");
}

const displayContent = isAdmin && post.draft ? post.draft : post.content;
const contentHtml = await renderMarkdown(displayContent);
const toc = extractTOC(displayContent);

// Resolve doc project first page URL to avoid 3xx redirect
let docProjectUrl = post.docProject ? `/docs/${post.docProject}` : "";
if (post.docProject) {
  const proj = await db.select({ id: projects.id }).from(projects).where(eq(projects.name, post.docProject)).get();
  if (proj) {
    const firstDoc = await db
      .select({ id: docs.id })
      .from(docs)
      .innerJoin(sections, eq(docs.sectionId, sections.id))
      .where(eq(sections.projectId, proj.id))
      .orderBy(sections.sortOrder, docs.sortOrder)
      .get();
    if (firstDoc) docProjectUrl = `/docs/${post.docProject}/${firstDoc.id}`;
  }
}
---

<BaseLayout title={`${post.title} — Gabriel Guillou`} description={post.excerpt || `Article technique : ${post.title}. Par Gabriel Guillou.`}>
  <div class="article-page">
    <a href="/article" class="back-btn"><Icon name="arrow-left" size={14} /> Retour</a>

    <div class="article-header">
      <div class="article-meta">
        <span class="article-cat">{post.cat}</span>
        <span class="meta-dot" />
        <span class="article-info">{post.date} · {post.time}</span>
      </div>
      <h1 class="article-title">{post.title}</h1>
      <p class="article-excerpt">{post.excerpt}</p>
      {post.docProject && (
        <a href={docProjectUrl} class="doc-link-btn">
          Documentation {post.docProject} <Icon name="arrow-right" size={14} />
        </a>
      )}
    </div>

    {toc.length > 0 && (
      <div class="toc">
        <div class="toc-title">Sommaire</div>
        {toc.map((t) => (
          <a href={`#${t.slug}`} class="toc-item">{t.text}</a>
        ))}
      </div>
    )}

    <div class="md-body" set:html={contentHtml} />
    {isAdmin && (
      <AdminBar
        hasDraft={!!post.draft}
        publishUrl={`/api/posts/${post.id}/publish`}
      />
    )}
  </div>
  {isAdmin && <EditButton href={`/admin/blog-edit?id=${post.id}`} />}
  <MermaidInit />
</BaseLayout>

<style>
  .article-page {
    max-width: var(--content-max-width);
    width: 100%;
    margin: 0 auto;
    padding: 4rem 3rem 8rem;
  }

  .back-btn {
    background: none;
    border: none;
    color: var(--tertiary);
    cursor: pointer;
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-sm);
    margin-bottom: 2rem;
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    text-decoration: none;
    transition: color 0.2s;
  }

  .back-btn:hover {
    color: var(--blue-hover);
  }

  .article-header {
    margin-bottom: 2.5rem;
  }

  .article-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-bottom: 1.2rem;
  }

  .article-cat {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-xs);
    color: var(--blue);
    font-weight: 500;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .meta-dot {
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: var(--tertiary);
  }

  .article-info {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-sm);
    color: var(--tertiary);
  }

  .article-title {
    font-family: 'Source Serif 4', serif;
    font-size: var(--fs-display);
    font-weight: 700;
    line-height: 1.2;
    color: var(--white);
    margin-bottom: 1.5rem;
  }

  .article-excerpt {
    font-family: 'DM Sans', sans-serif;
    color: var(--secondary);
    font-size: var(--fs-body-lg);
    line-height: 1.8;
    font-style: italic;
  }

  .doc-link-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    margin-top: 1rem;
    background: color-mix(in srgb, var(--blue) 3%, transparent);
    border: 1px solid color-mix(in srgb, var(--blue) 15%, transparent);
    color: var(--blue-hover);
    padding: 0.4rem 1rem;
    cursor: pointer;
    font-size: var(--fs-xs);
    font-family: 'DM Sans', sans-serif;
    border-radius: 5px;
    font-weight: 500;
    transition: background 0.2s;
    text-decoration: none;
  }

  .doc-link-btn:hover {
    background: color-mix(in srgb, var(--blue) 8%, transparent);
  }

  /* ─── TOC ─── */
  .toc {
    padding: 1.2rem 1.5rem;
    background: var(--surface);
    border: 1px solid var(--line);
    border-radius: 6px;
    margin-bottom: 3rem;
  }

  .toc-title {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-xxs);
    color: var(--tertiary);
    letter-spacing: 1.5px;
    text-transform: uppercase;
    margin-bottom: 0.8rem;
    font-weight: 500;
  }

  .toc-item {
    display: block;
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-sm);
    color: var(--blue-hover);
    margin-bottom: 0.3rem;
    cursor: pointer;
    text-decoration: none;
    transition: color 0.2s;
  }

  .toc-item:hover {
    text-decoration: underline;
  }

  /* md-body styles are in global.css */

  /* ─── Tablet ─── */
  @media (max-width: 1024px) {
    .article-page {
      padding: 3rem 1.5rem 6rem;
    }
  }

  /* ─── Mobile ─── */
  @media (max-width: 768px) {
    .article-page {
      padding: 2rem 1.2rem 4rem;
    }

  }
</style>