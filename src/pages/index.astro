---
import BaseLayout from "../layouts/BaseLayout.astro";
import ConfirmModal from "../components/ConfirmModal.astro";
import DraftBadge from "../components/DraftBadge.astro";
import EditButton from "../components/EditButton.astro";
import GitHistory from "../components/GitHistory";
import { db } from "../db";
import { portfolio, portfolioHistory } from "../db/schema";
import { parseMDX, renderMarkdown } from "../lib/markdown";

const isAdmin = Astro.locals.isAdmin;
const row = await db.select().from(portfolio).get();
const displayMdx = isAdmin && row?.draft ? row.draft : (row?.content ?? "");
const hasDraft = !!row?.draft;
const history = isAdmin ? await db.select().from(portfolioHistory).all() : [];
const { frontmatter: fm, body } = parseMDX(displayMdx);

const name = (fm.name as string) || "Gabriel Guillou";
const role = (fm.role as string) || "";
const headline = (fm.headline as string) || "";
const bio = (fm.bio as string) || "";
const skills = (fm.skills as Array<{ name: string; details: string }>) || [];
const projects = (fm.projects as Array<{ title: string; description: string; tags?: string[]; blog?: string; docs?: string }>) || [];
const stats = (fm.stats as Array<{ value: string; label: string }>) || [];

const bodyHtml = body ? await renderMarkdown(body) : "";

// Render headline with *italic* → <em class="hl-accent">
function renderHeadline(text: string): string {
  return text.replace(/\*([^*]+)\*/g, '<em class="hl-accent">$1</em>');
}
---

<BaseLayout title={`${name} — Portfolio`}>
  {isAdmin && (hasDraft || history.length > 0) && (
    <div class="portfolio-draft-bar">
      {hasDraft && <DraftBadge />}
      {hasDraft && <span class="draft-msg">Des modifications non publiées sont en attente</span>}
      <div class="draft-spacer" />
      <GitHistory client:load history={history} restoreUrl="/api/portfolio/draft" />
      {hasDraft && (
        <button class="draft-publish-btn" data-publish-url="/api/portfolio/publish">Publier</button>
      )}
    </div>
  )}
  <div class="portfolio">
    <!-- Hero -->
    <div class="hero">
      <p class="hero-role">{role}</p>
      <h1 class="hero-name">{name}</h1>
      <p class="hero-headline" set:html={renderHeadline(headline)} />
      <p class="hero-bio">{bio}</p>
    </div>

    <!-- Skills -->
    {skills.length > 0 && (
      <div class="skills">
        <h2 class="sr-only">Compétences</h2>
        {skills.map((s) => (
          <div class="skill">
            <div class="skill-name">{s.name}</div>
            <div class="skill-details">{s.details}</div>
          </div>
        ))}
      </div>
    )}

    <!-- Projects -->
    {projects.length > 0 && (
      <>
        <div class="projects-header">
          <h2 class="projects-title">Projets<span class="dot">.</span></h2>
          <span class="projects-count">{projects.length} projets</span>
        </div>
        <div class="projects-list">
          {projects.map((p, i) => (
            <div class:list={["project", { clickable: !!p.blog }]}>
              <span class="project-num">{String(i + 1).padStart(2, "0")}</span>
              <div class="project-content">
                <h3 class="project-title">
                  {p.blog ? <a href={`/blog/${p.blog}`} class="project-link">{p.title}</a> : p.title}
                </h3>
                <p class="project-desc">{p.description}</p>
                <div class="project-links">
                  {p.docs && <a href={`/docs/${p.docs}`} class="docs-btn">{p.docs && "Docs"}</a>}
                </div>
              </div>
              <div class="project-tags">
                {(p.tags || []).map((t) => (
                  <span class="tag">{t}</span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </>
    )}

    <!-- Stats -->
    {stats.length > 0 && (
      <div class="stats" style={`grid-template-columns: repeat(${stats.length}, 1fr);`}>
        <h2 class="sr-only">Chiffres clés</h2>
        {stats.map((s) => (
          <div class="stat">
            <div class="stat-value">{s.value}</div>
            <div class="stat-label">{s.label}</div>
          </div>
        ))}
      </div>
    )}

    <!-- MDX Body -->
    {bodyHtml && (
      <>
        <h2 class="sr-only">Présentation</h2>
        <div class="md-body" set:html={bodyHtml} />
      </>
    )}
  </div>
  {isAdmin && <EditButton href="/admin/portfolio" />}
  <ConfirmModal />
</BaseLayout>

<style>
  .portfolio {
    max-width: var(--content-max-width);
    width: 100%;
    margin: 0 auto;
    padding: 0 3rem;
  }

  /* ─── Hero ─── */
  .hero {
    text-align: center;
    margin-bottom: 4rem;
    padding: 5rem 0 3rem;
  }

  .hero-role {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-xs);
    color: var(--blue);
    letter-spacing: 4px;
    text-transform: uppercase;
    margin-bottom: 2rem;
    font-weight: 500;
  }

  .hero-name {
    font-family: 'Playfair Display', serif;
    font-size: var(--fs-hero);
    font-weight: 700;
    line-height: 1;
    margin-bottom: 1.5rem;
    letter-spacing: -3px;
    color: var(--white);
  }

  .hero-headline {
    font-family: 'Playfair Display', serif;
    font-size: var(--fs-h2);
    font-weight: 400;
    color: var(--secondary);
    font-style: italic;
    margin-bottom: 2rem;
    line-height: 1.4;
  }

  .hero-headline :global(.hl-accent) {
    font-style: italic;
    color: var(--blue);
  }

  .hero-bio {
    color: var(--secondary);
    font-size: var(--fs-body-lg);
    line-height: 1.8;
    font-family: 'DM Sans', sans-serif;
    max-width: 560px;
    margin: 0 auto;
  }

  /* ─── Skills ─── */
  .skills {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 6rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .skill {
    padding: 1rem 1.5rem;
    border-bottom: 2px solid var(--line);
    flex: 1 1 0;
    min-width: 160px;
    text-align: center;
  }

  .skill-name {
    font-family: 'Playfair Display', serif;
    font-size: var(--fs-body);
    font-weight: 600;
    color: var(--white);
    margin-bottom: 0.2rem;
  }

  .skill-details {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-sm);
    color: var(--tertiary);
  }

  /* ─── Projects ─── */
  .projects-header {
    margin-bottom: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: baseline;
  }

  .projects-title {
    font-family: 'Playfair Display', serif;
    font-size: var(--fs-h2);
    font-weight: 700;
    color: var(--white);
  }

  .dot {
    color: var(--blue);
  }

  .projects-count {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-xs);
    color: var(--tertiary);
  }

  .projects-list {
    border-top: 1px solid var(--line);
  }

  .project {
    display: grid;
    grid-template-columns: 60px 1fr auto;
    gap: 2rem;
    padding: 2rem 0;
    border-bottom: 1px solid var(--line);
    align-items: start;
  }

  .project-num {
    font-family: 'Playfair Display', serif;
    font-size: var(--fs-h3);
    color: var(--decorative);
    font-style: italic;
    transition: color 0.3s;
  }

  .project:hover .project-num {
    color: var(--blue);
  }

  .project-title {
    font-family: 'Playfair Display', serif;
    font-size: var(--fs-h3);
    font-weight: 600;
    margin-bottom: 0.4rem;
    color: var(--white);
    transition: color 0.3s;
  }

  .project:hover .project-title {
    color: var(--blue-hover);
  }


  .project {
    position: relative;
  }

  .project.clickable {
    cursor: pointer;
  }

  .project:not(.clickable) .project-num { color: var(--decorative); }
  .project:not(.clickable):hover .project-num { color: var(--decorative); }
  .project:not(.clickable):hover .project-title { color: var(--white); }

  /* Stretched link: the <a> inside the title covers the entire project card */
  .project-link {
    color: inherit;
    text-decoration: none;
  }

  .project-link::after {
    content: "";
    position: absolute;
    inset: 0;
  }

  .project-desc {
    font-family: 'DM Sans', sans-serif;
    color: var(--secondary);
    font-size: var(--fs-body);
    line-height: 1.6;
    margin-bottom: 0.6rem;
  }

  .project-links {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .docs-btn {
    position: relative;
    z-index: 1;
    background: color-mix(in srgb, var(--blue) 8%, transparent);
    border: 1px solid color-mix(in srgb, var(--blue) 25%, transparent);
    color: var(--blue-hover);
    padding: 0.35rem 0.9rem;
    cursor: pointer;
    font-size: var(--fs-xs);
    font-family: 'DM Sans', sans-serif;
    border-radius: 4px;
    font-weight: 600;
    transition: background 0.2s;
    text-decoration: none;
  }

  .docs-btn:hover {
    background: color-mix(in srgb, var(--blue) 15%, transparent);
  }

  .project-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: flex-end;
    padding-top: 0.3rem;
  }

  .tag {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-xs);
    color: var(--tertiary);
    border: 1px solid var(--line);
    padding: 0.2rem 0.6rem;
    border-radius: 20px;
  }

  /* ─── Stats ─── */
  .stats {
    margin-top: 4rem;
    display: grid;
    gap: 2rem;
    padding: 2.5rem 0;
    text-align: center;
  }

  .stat-value {
    font-family: 'Playfair Display', serif;
    font-size: var(--fs-h1);
    font-weight: 700;
    color: var(--blue);
  }

  .stat-label {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-xs);
    color: var(--tertiary);
    letter-spacing: 1px;
    text-transform: uppercase;
    margin-top: 0.3rem;
  }

  /* md-body styles are in global.css — only override spacing for portfolio */
  .md-body {
    margin-top: 5rem;
    padding-bottom: 6rem;
    font-size: var(--fs-body);
  }

  /* ─── Portfolio draft bar ─── */
  .portfolio-draft-bar {
    background: color-mix(in srgb, var(--blue) 3%, transparent);
    border-bottom: 1px solid color-mix(in srgb, var(--blue) 13%, transparent);
    padding: 0.5rem 3rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .draft-msg {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-xs);
    color: var(--tertiary);
  }

  .draft-spacer {
    flex: 1;
  }

  .draft-publish-btn {
    background: var(--green);
    border: none;
    color: #fff;
    padding: 0.35rem 1rem;
    cursor: pointer;
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-xs);
    font-weight: 600;
    border-radius: 4px;
    transition: background 0.2s;
  }

  .draft-publish-btn:hover {
    opacity: 0.9;
  }

  /* ─── Tablet ─── */
  @media (max-width: 1024px) {
    .portfolio {
      padding: 0 1.5rem;
    }

    .portfolio-draft-bar {
      padding: 0.5rem 1.5rem;
    }
  }

  /* ─── Mobile ─── */
  @media (max-width: 700px) {
    .portfolio {
      padding: 0 1.2rem;
    }

    .hero {
      padding: 3rem 0 2rem;
      margin-bottom: 2.5rem;
    }

    .hero-name {
      letter-spacing: -1px;
    }

    .hero-role {
      letter-spacing: 2px;
    }

    .skills {
      flex-direction: column;
      gap: 0;
      margin-bottom: 3rem;
      margin-left: 5rem;
      margin-right: 5rem;
    }

    .skill {
      flex: none;
      min-width: 0;
      width: 100%;
      padding: 0.8rem 0;
    }

    .project {
      grid-template-columns: 30px 1fr;
      gap: 0.8rem;
    }

    .project-tags {
      grid-column: 2 / -1;
      justify-content: flex-start;
      gap: 0.4rem;
    }

    .tag {
      padding: 0.15rem 0.5rem;
    }

    .stats {
      margin-top: 2rem;
      gap: 1rem;
    }

    .portfolio-draft-bar {
      padding: 0.5rem 1.2rem;
    }

    .draft-msg {
      display: none;
    }

    .md-body {
      margin-top: 3rem;
      padding-bottom: 3rem;
    }
  }
</style>

<script is:inline>
  document.querySelectorAll(".draft-publish-btn").forEach((btn) => {
    btn.addEventListener("click", async () => {
      const url = btn.getAttribute("data-publish-url");
      const res = await fetch(url, { method: "POST" });
      if (res.ok) window.location.reload();
    });
  });
</script>