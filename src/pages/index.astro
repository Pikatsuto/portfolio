---
import BaseLayout from "../layouts/BaseLayout.astro";
import DraftBadge from "../components/DraftBadge.astro";
import EditButton from "../components/EditButton.astro";
import { db } from "../db";
import { portfolio } from "../db/schema";
import { parseMDX, renderMarkdown } from "../lib/markdown";

const isAdmin = Astro.locals.isAdmin;
const row = await db.select().from(portfolio).get();
const mdx = row?.content ?? "";
const hasDraft = !!row?.draft;
const { frontmatter: fm, body } = parseMDX(mdx);

const name = (fm.name as string) || "Gabriel";
const role = (fm.role as string) || "";
const headline = (fm.headline as string) || "";
const bio = (fm.bio as string) || "";
const skills = (fm.skills as Array<{ name: string; details: string }>) || [];
const projects = (fm.projects as Array<{ title: string; description: string; tags?: string[]; blog?: string; docs?: string }>) || [];
const stats = (fm.stats as Array<{ value: string; label: string }>) || [];

const bodyHtml = body ? await renderMarkdown(body) : "";

// Render headline with *italic* → <em class="hl-accent">
function renderHeadline(text: string): string {
  return text.replace(/\*([^*]+)\*/g, '<em class="hl-accent">$1</em>');
}
---

<BaseLayout title={`${name} — Portfolio`}>
  {isAdmin && hasDraft && (
    <div class="portfolio-draft-bar">
      <DraftBadge />
      <span class="draft-msg">Des modifications non publiées sont en attente</span>
      <div class="draft-spacer" />
      <button class="draft-publish-btn" data-publish-url="/api/portfolio/publish">Publier</button>
    </div>
  )}
  <div class="portfolio">
    <!-- Hero -->
    <div class="hero">
      <p class="hero-role">{role}</p>
      <h1 class="hero-name">{name}</h1>
      <p class="hero-headline" set:html={renderHeadline(headline)} />
      <p class="hero-bio">{bio}</p>
    </div>

    <!-- Skills -->
    {skills.length > 0 && (
      <div class="skills">
        {skills.map((s) => (
          <div class="skill">
            <div class="skill-name">{s.name}</div>
            <div class="skill-details">{s.details}</div>
          </div>
        ))}
      </div>
    )}

    <!-- Projects -->
    {projects.length > 0 && (
      <>
        <div class="projects-header">
          <h2 class="projects-title">Projets<span class="dot">.</span></h2>
          <span class="projects-count">{projects.length} projets</span>
        </div>
        <div class="projects-list">
          {projects.map((p, i) => (
            <div class="project">
              <span class="project-num">{String(i + 1).padStart(2, "0")}</span>
              <div class="project-content">
                <h3 class="project-title">{p.title}</h3>
                <p class="project-desc">{p.description}</p>
                <div class="project-links">
                  {p.blog && <a href={`/blog/${p.blog}`} class="link-btn">Article →</a>}
                  {p.docs && <a href={`/docs/${p.docs}`} class="link-btn">Docs →</a>}
                </div>
              </div>
              <div class="project-tags">
                {(p.tags || []).map((t) => (
                  <span class="tag">{t}</span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </>
    )}

    <!-- Stats -->
    {stats.length > 0 && (
      <div class="stats" style={`grid-template-columns: repeat(${stats.length}, 1fr);`}>
        {stats.map((s) => (
          <div class="stat">
            <div class="stat-value">{s.value}</div>
            <div class="stat-label">{s.label}</div>
          </div>
        ))}
      </div>
    )}

    <!-- MDX Body -->
    {bodyHtml && <div class="md-body" set:html={bodyHtml} />}
  </div>
  {isAdmin && <EditButton href="/admin/portfolio" />}
</BaseLayout>

<style>
  .portfolio {
    max-width: 1100px;
    width: 100%;
    margin: 0 auto;
    padding: 0 3rem;
  }

  /* ─── Hero ─── */
  .hero {
    text-align: center;
    margin-bottom: 4rem;
    padding: 5rem 0 3rem;
  }

  .hero-role {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.8rem;
    color: var(--blue);
    letter-spacing: 4px;
    text-transform: uppercase;
    margin-bottom: 2rem;
    font-weight: 500;
  }

  .hero-name {
    font-family: 'Playfair Display', serif;
    font-size: 6rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 1.5rem;
    letter-spacing: -3px;
    color: var(--white);
  }

  .hero-headline {
    font-family: 'Playfair Display', serif;
    font-size: 1.8rem;
    font-weight: 400;
    color: var(--secondary);
    font-style: italic;
    margin-bottom: 2rem;
    line-height: 1.4;
  }

  .hero-headline :global(.hl-accent) {
    font-style: italic;
    color: var(--blue);
  }

  .hero-bio {
    color: var(--secondary);
    font-size: 1.05rem;
    line-height: 1.8;
    font-family: 'DM Sans', sans-serif;
    max-width: 560px;
    margin: 0 auto;
  }

  /* ─── Skills ─── */
  .skills {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 6rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .skill {
    padding: 1rem 1.5rem;
    border-bottom: 2px solid var(--line);
    transition: border-color 0.3s;
    flex: 1 1 0;
    min-width: 160px;
    text-align: center;
  }

  .skill:hover {
    border-bottom-color: var(--blue);
  }

  .skill-name {
    font-family: 'Playfair Display', serif;
    font-size: 1rem;
    font-weight: 600;
    color: var(--white);
    margin-bottom: 0.2rem;
  }

  .skill-details {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.82rem;
    color: var(--tertiary);
  }

  /* ─── Projects ─── */
  .projects-header {
    margin-bottom: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: baseline;
  }

  .projects-title {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 700;
    color: var(--white);
  }

  .dot {
    color: var(--blue);
  }

  .projects-count {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.8rem;
    color: var(--tertiary);
  }

  .projects-list {
    border-top: 1px solid var(--line);
  }

  .project {
    display: grid;
    grid-template-columns: 60px 1fr auto;
    gap: 2rem;
    padding: 2rem 0;
    border-bottom: 1px solid var(--line);
    align-items: start;
  }

  .project-num {
    font-family: 'Playfair Display', serif;
    font-size: 1.3rem;
    color: var(--decorative);
    font-style: italic;
    transition: color 0.3s;
  }

  .project:hover .project-num {
    color: var(--blue);
  }

  .project-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.4rem;
    color: var(--white);
    transition: color 0.3s;
  }

  .project:hover .project-title {
    color: var(--blue-hover);
  }

  .project-desc {
    font-family: 'DM Sans', sans-serif;
    color: var(--secondary);
    font-size: 0.92rem;
    line-height: 1.6;
    margin-bottom: 0.6rem;
  }

  .project-links {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .link-btn {
    background: none;
    border: 1px solid var(--line);
    color: var(--tertiary);
    padding: 0.25rem 0.7rem;
    cursor: pointer;
    font-size: 0.72rem;
    font-family: 'DM Sans', sans-serif;
    border-radius: 4px;
    font-weight: 500;
    transition: color 0.2s, border-color 0.2s;
    text-decoration: none;
  }

  .link-btn:hover {
    color: var(--blue-hover);
    border-color: color-mix(in srgb, var(--blue) 27%, transparent);
  }

  .project-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: flex-end;
    padding-top: 0.3rem;
  }

  .tag {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.75rem;
    color: var(--tertiary);
    border: 1px solid var(--line);
    padding: 0.2rem 0.6rem;
    border-radius: 20px;
  }

  /* ─── Stats ─── */
  .stats {
    margin-top: 4rem;
    display: grid;
    gap: 2rem;
    padding: 2.5rem 0;
    border-top: 1px solid var(--line);
    text-align: center;
  }

  .stat-value {
    font-family: 'Playfair Display', serif;
    font-size: 2.2rem;
    font-weight: 700;
    color: var(--blue);
  }

  .stat-label {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.75rem;
    color: var(--tertiary);
    letter-spacing: 1px;
    text-transform: uppercase;
    margin-top: 0.3rem;
  }

  /* ─── MDX Body ─── */
  .md-body {
    margin-top: 5rem;
    padding-bottom: 6rem;
    font-family: 'DM Sans', sans-serif;
    color: var(--body);
    font-size: 0.95rem;
    line-height: 1.9;
  }

  .md-body :global(.md-h2) {
    font-family: 'Playfair Display', serif;
    color: var(--white);
    font-size: 1.4rem;
    font-weight: 600;
    margin: 2.5rem 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--line);
  }

  .md-body :global(.md-h3) {
    font-family: 'Playfair Display', serif;
    color: var(--white);
    font-size: 1.15rem;
    font-weight: 600;
    margin: 2rem 0 0.8rem;
  }

  .md-body :global(p) {
    margin-bottom: 0.8rem;
    line-height: 1.9;
  }

  .md-body :global(ul) {
    padding-left: 1.2rem;
    margin-bottom: 1.2rem;
  }

  .md-body :global(li) {
    margin-bottom: 0.4rem;
    color: var(--body);
    line-height: 1.8;
  }

  .md-body :global(strong) {
    color: var(--white);
    font-weight: 600;
  }

  .md-body :global(.md-inline-code) {
    background: var(--code-bg);
    border: 1px solid var(--line);
    padding: 0.1rem 0.35rem;
    border-radius: 3px;
    font-size: 0.88em;
    color: var(--blue-hover);
    font-family: 'JetBrains Mono', monospace;
  }

  .md-body :global(.md-code) {
    margin: 1.2rem 0;
    border-radius: 4px;
    overflow: hidden;
  }

  .md-body :global(.md-code pre) {
    background: var(--code-bg) !important;
    border: 1px solid var(--line);
    border-left: 3px solid var(--blue);
    padding: 1rem 1.3rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.84rem;
    line-height: 1.7;
    overflow-x: auto;
  }

  /* Plain text code blocks (no language) — use --blue-hover like JSX prototype */
  .md-body :global(.md-code-plain) {
    color: var(--blue-hover);
  }

  /* Shiki dual theme: use dark colors by default, light when [data-theme="light"] */
  .md-body :global(.shiki span) {
    color: var(--s-dark) !important;
  }

  :root[data-theme="light"] .md-body :global(.shiki span) {
    color: var(--s-light) !important;
  }

  /* ─── Portfolio draft bar ─── */
  .portfolio-draft-bar {
    background: color-mix(in srgb, var(--blue) 3%, transparent);
    border-bottom: 1px solid color-mix(in srgb, var(--blue) 13%, transparent);
    padding: 0.5rem 3rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .draft-msg {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.8rem;
    color: var(--tertiary);
  }

  .draft-spacer {
    flex: 1;
  }

  .draft-publish-btn {
    background: var(--green);
    border: none;
    color: #fff;
    padding: 0.35rem 1rem;
    cursor: pointer;
    font-family: 'DM Sans', sans-serif;
    font-size: 0.78rem;
    font-weight: 600;
    border-radius: 4px;
    transition: background 0.2s;
  }

  .draft-publish-btn:hover {
    opacity: 0.9;
  }
</style>

<script is:inline>
  document.querySelectorAll(".draft-publish-btn").forEach((btn) => {
    btn.addEventListener("click", async () => {
      const url = btn.getAttribute("data-publish-url");
      const res = await fetch(url, { method: "POST" });
      if (res.ok) window.location.reload();
    });
  });
</script>