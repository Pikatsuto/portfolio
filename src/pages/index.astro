---
import BaseLayout from "../layouts/BaseLayout.astro";
import ConfirmModal from "../components/ConfirmModal.astro";
import DraftBadge from "../components/DraftBadge.astro";
import EditButton from "../components/EditButton.astro";
import GitHistory from "../components/GitHistory";
import { db } from "../db";
import { portfolio, portfolioHistory, projects as projectsTable, docs, sections } from "../db/schema";
import { eq } from "drizzle-orm";
import { parseMDX, renderMarkdown } from "../lib/markdown";

const isAdmin = Astro.locals.isAdmin;
const row = await db.select().from(portfolio).get();
const displayMdx = isAdmin && row?.draft ? row.draft : (row?.content ?? "");
const hasDraft = !!row?.draft;
const history = isAdmin ? await db.select().from(portfolioHistory).all() : [];
const { frontmatter: fm, body } = parseMDX(displayMdx);

const name = (fm.name as string) || "Gabriel Guillou";
const role = (fm.role as string) || "";
const headline = (fm.headline as string) || "";
const bio = (fm.bio as string) || "";
const skills = (fm.skills as Array<{ name: string; details: string }>) || [];
const projects = (fm.projects as Array<{ title: string; description: string; tags?: string[]; blog?: string; docs?: string }>) || [];
const stats = (fm.stats as Array<{ value: string; label: string }>) || [];
const skillsDesc = (fm.skillsDesc as string) || "";
const projectsDesc = (fm.projectsDesc as string) || "";
const statsDesc = (fm.statsDesc as string) || "";
const parcoursDesc = (fm.parcoursDesc as string) || "";
const sectionOrder = (fm.sectionOrder as string[]) || ["skills", "projects", "stats", "parcours"];

const bodyHtml = body ? await renderMarkdown(body) : "";

const jsonLd = JSON.stringify([
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: "Gabriel Guillou",
    url: Astro.site?.href || "https://gabriel-guillou.fr",
  },
  {
    "@context": "https://schema.org",
    "@type": "Person",
    name,
    url: Astro.site?.href || "https://gabriel-guillou.fr",
    jobTitle: role,
    description: bio,
    sameAs: [
      "https://github.com/Pikatsuto",
      "https://www.linkedin.com/in/gabriel-guillou-a56bb4237/",
    ],
  },
]);

// Build a map of project name → first doc page URL (to avoid 3xx redirects)
const docsFirstPageMap = new Map<string, string>();
const docProjectNames = projects.filter((p) => p.docs).map((p) => p.docs!);
for (const projName of docProjectNames) {
  const proj = await db.select({ id: projectsTable.id }).from(projectsTable).where(eq(projectsTable.name, projName)).get();
  if (!proj) continue;
  const firstDoc = await db
    .select({ id: docs.id })
    .from(docs)
    .innerJoin(sections, eq(docs.sectionId, sections.id))
    .where(eq(sections.projectId, proj.id))
    .orderBy(sections.sortOrder, docs.sortOrder)
    .get();
  if (firstDoc) docsFirstPageMap.set(projName, `/docs/${projName}/${firstDoc.id}`);
}

// Render headline with *italic* → <em class="hl-accent">
function renderHeadline(text: string): string {
  return text.replace(/\*([^*]+)\*/g, '<em class="hl-accent">$1</em>');
}
---

<BaseLayout title={`${name} — Portfolio DevOps, Sysadmin & Full-Stack`} description={`Portfolio de ${name}, ${role}. Projets, compétences et retours d'expérience en DevOps et développement web.`}>
  {isAdmin && (hasDraft || history.length > 0) && (
    <div class="portfolio-draft-bar">
      {hasDraft && <DraftBadge />}
      {hasDraft && <span class="draft-msg">Des modifications non publiées sont en attente</span>}
      <div class="draft-spacer" />
      <GitHistory client:load history={history} restoreUrl="/api/portfolio/draft" />
      {hasDraft && (
        <button class="draft-publish-btn" data-publish-url="/api/portfolio/publish">Publier</button>
      )}
    </div>
  )}
  <div class="portfolio">
    <!-- Hero -->
    <div class="hero">
      <p class="hero-role">{role}</p>
      <h1 class="hero-name">{name}</h1>
      <p class="hero-headline" set:html={renderHeadline(headline)} />
      <p class="hero-bio">{bio}</p>
    </div>

    <h2 class="detail-title">En détail<span class="dot">.</span></h2>

    {/* Render sections in sectionOrder */}
    {sectionOrder.map((section) => {
      if (section === "skills" && skills.length > 0) return (
        <div class="portfolio-section">
          <h3 class="section-title">Compétences<span class="dot">.</span></h3>
          {skillsDesc && <p class="section-desc">{skillsDesc}</p>}
          <div class="skills">
            {skills.map((s) => (
              <div class="skill">
                <div class="skill-name">{s.name}</div>
                <div class="skill-details">{s.details}</div>
              </div>
            ))}
          </div>
        </div>
      );

      if (section === "projects" && projects.length > 0) return (
        <div class="portfolio-section">
          <h3 class="section-title">Projets<span class="dot">.</span></h3>
          {projectsDesc && <p class="section-desc">{projectsDesc}</p>}
          <div class="projects-list">
            {projects.map((p, i) => (
              <div class:list={["project", { clickable: !!p.blog }]}>
                <span class="project-num">{String(i + 1).padStart(2, "0")}</span>
                <div class="project-content">
                  <h4 class="project-title">
                    {p.blog ? <a href={`/articles/${p.blog}`} class="project-link">{p.title}<span class="dot">.</span></a> : <>{p.title}<span class="dot">.</span></>}
                  </h4>
                  <p class="project-desc">{p.description}</p>
                  <div class="project-links">
                    {p.docs && <a href={docsFirstPageMap.get(p.docs) || `/docs/${p.docs}`} class="docs-btn">Docs</a>}
                  </div>
                </div>
                <div class="project-tags">
                  {(p.tags || []).map((t) => (
                    <span class="tag">{t}</span>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>
      );

      if (section === "stats" && stats.length > 0) return (
        <div class="portfolio-section portfolio-section--bordered">
          <h3 class="section-title">Chiffres clés<span class="dot">.</span></h3>
          {statsDesc && <p class="section-desc">{statsDesc}</p>}
          <div class="stats" style={`grid-template-columns: repeat(${stats.length}, 1fr);`}>
            {stats.map((s) => (
              <div class="stat">
                <div class="stat-value">{s.value}</div>
                <div class="stat-label">{s.label}</div>
              </div>
            ))}
          </div>
        </div>
      );

      if (section === "parcours" && bodyHtml) return (
        <div class="portfolio-section portfolio-section--bordered">
          <h3 class="section-title">Parcours<span class="dot">.</span></h3>
          {parcoursDesc && <p class="section-desc">{parcoursDesc}</p>}
          <div class="md-body" set:html={bodyHtml} />
        </div>
      );
    })}
  </div>
  {isAdmin && <EditButton href="/admin/portfolio" />}
  <ConfirmModal />
  <script type="application/ld+json" set:html={jsonLd} />
</BaseLayout>

<style is:global>
  @import '../styles/portfolio-sections.css';
</style>

<style>
  .portfolio {
    max-width: var(--content-max-width);
    width: 100%;
    margin: 0 auto;
    padding: 0 3rem;
  }

  /* ─── Detail H2 ─── */
  .detail-title {
    font-family: 'Source Serif 4', serif;
    font-size: var(--fs-h1);
    font-weight: 700;
    color: var(--white);
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--line);
  }

  .detail-title + .portfolio-section {
    margin-top: 0;
  }

  /* ─── Sections wrapper — consistent spacing ─── */
  .portfolio-section + .portfolio-section {
    margin-top: 6rem;
  }

  .portfolio-section--bordered:not(:last-child) {
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--line);
  }

  .portfolio-section:last-child {
    padding-bottom: 6rem;
  }

  /* md-body styles are in global.css — only override font-size for portfolio */
  .md-body {
    font-size: var(--fs-body);
  }

  /* ─── Portfolio draft bar ─── */
  .portfolio-draft-bar {
    background: color-mix(in srgb, var(--blue) 3%, transparent);
    border-bottom: 1px solid color-mix(in srgb, var(--blue) 13%, transparent);
    padding: 0.5rem 3rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .draft-msg {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-xs);
    color: var(--tertiary);
  }

  .draft-spacer {
    flex: 1;
  }

  .draft-publish-btn {
    background: var(--green);
    border: none;
    color: #fff;
    padding: 0.35rem 1rem;
    cursor: pointer;
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-xs);
    font-weight: 600;
    border-radius: 4px;
    transition: background 0.2s;
  }

  .draft-publish-btn:hover {
    opacity: 0.9;
  }

  /* ─── Tablet ─── */
  @media (max-width: 1024px) {
    .portfolio {
      padding: 0 1.5rem;
    }

    .portfolio-draft-bar {
      padding: 0.5rem 1.5rem;
    }
  }

  /* ─── Mobile ─── */
  @media (max-width: 700px) {
    .portfolio {
      padding: 0 1.2rem;
    }

    .hero {
      padding: 3rem 0 2rem;
      margin-bottom: 2.5rem;
    }

    .hero-name {
      letter-spacing: -1px;
    }

    .hero-role {
      letter-spacing: 2px;
    }

    .portfolio-section + .portfolio-section {
      margin-top: 3rem;
    }

    .portfolio-section:last-child {
      padding-bottom: 3rem;
    }

    .skills {
      flex-direction: column;
      gap: 0;
      margin-left: 5rem;
      margin-right: 5rem;
    }

    .skill {
      flex: none;
      min-width: 0;
      width: 100%;
      padding: 0.8rem 0;
    }

    .project {
      grid-template-columns: 30px 1fr;
      gap: 0.8rem;
    }

    .project-tags {
      grid-column: 2 / -1;
      justify-content: flex-start;
      gap: 0.4rem;
    }

    .tag {
      padding: 0.15rem 0.5rem;
    }

    .stats {
      gap: 1rem;
    }

    .portfolio-draft-bar {
      padding: 0.5rem 1.2rem;
    }

    .draft-msg {
      display: none;
    }

    .md-body {
      margin-top: 0;
    }
  }
</style>

<script is:inline>
  document.querySelectorAll(".draft-publish-btn").forEach((btn) => {
    btn.addEventListener("click", async () => {
      const url = btn.getAttribute("data-publish-url");
      const res = await fetch(url, { method: "POST" });
      if (res.ok) window.location.reload();
    });
  });
</script>