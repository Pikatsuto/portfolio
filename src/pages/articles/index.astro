---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { db } from "../../db";
import { posts, categories, settings } from "../../db/schema";
import { eq } from "drizzle-orm";

const isAdmin = Astro.locals.isAdmin;
const articlesSubtitleRow = await db.select().from(settings).where(eq(settings.key, "articlesSubtitle")).get();
const articlesSubtitle = articlesSubtitleRow?.value || "Notes techniques et retours d'expérience.";
const articlesDescRow = await db.select().from(settings).where(eq(settings.key, "articlesDesc")).get();
const articlesDesc = articlesDescRow?.value || "";

const query = db
  .select({
    id: posts.id,
    title: posts.title,
    date: posts.date,
    cat: categories.name,
    time: posts.time,
    excerpt: posts.excerpt,
    content: posts.content,
    draft: posts.draft,
    visible: posts.visible,
    sortOrder: posts.sortOrder,
  })
  .from(posts)
  .leftJoin(categories, eq(posts.categoryId, categories.id))
  .orderBy(posts.sortOrder);

const allPosts = isAdmin
  ? await query.all()
  : await query.where(eq(posts.visible, true)).all();
---

<BaseLayout title="Articles techniques — Blog de Gabriel Guillou" description="Articles techniques et retours d'expérience sur le DevOps, l'administration système et le développement full-stack par Gabriel Guillou.">
  <div class="blog-list">
    <div class="blog-header">
      <h1 class="blog-title">Articles<span class="dot">.</span></h1>
      <h2 class="blog-subtitle">{articlesSubtitle}</h2>
      {articlesDesc && <p class="blog-desc">{articlesDesc}</p>}
    </div>

    {allPosts.map((p) => (
      <article class:list={["blog-article", { hidden: !p.visible }]}>
        <a href={`/articles/${p.id}`} class="article-link">
          <div class="article-meta">
            <span class="article-cat">{p.cat}</span>
            <span class="meta-dot" />
            <span class="article-date">{p.date}</span>
            {!p.visible && <span class="hidden-badge">masqué</span>}
          </div>
          <h3 class="article-title">{p.title}</h3>
          <p class="article-excerpt">{p.excerpt}</p>
          <span class="article-time">{p.time}</span>
        </a>
      </article>
    ))}
  </div>
</BaseLayout>

<style>
  .blog-list {
    max-width: var(--content-max-width);
    width: 100%;
    margin: 0 auto;
    padding: 6rem 3rem 8rem;
  }

  .blog-header {
    margin-bottom: 4rem;
  }

  .blog-title {
    font-family: 'Source Serif 4', serif;
    font-size: var(--fs-display);
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--white);
  }

  .dot {
    color: var(--blue);
  }

  .blog-subtitle {
    font-family: 'DM Sans', sans-serif;
    color: var(--secondary);
    font-size: var(--fs-body);
    margin-bottom: 0.8rem;
  }

  .blog-desc {
    font-family: 'DM Sans', sans-serif;
    color: var(--tertiary);
    font-size: var(--fs-sm);
    line-height: 1.7;
    max-width: 700px;
  }

  .blog-article {
    margin-bottom: 4rem;
    padding-bottom: 4rem;
    border-bottom: 1px solid var(--line);
  }

  .blog-article:last-child {
    border-bottom: none;
  }

  .article-link {
    text-decoration: none;
    cursor: pointer;
    display: block;
  }

  .article-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-bottom: 1rem;
  }

  .article-cat {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-xs);
    color: var(--blue);
    font-weight: 500;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .meta-dot {
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: var(--tertiary);
  }

  .article-date {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-sm);
    color: var(--tertiary);
  }

  .blog-article.hidden .article-title {
    color: var(--tertiary);
  }

  .blog-article.hidden .article-excerpt {
    color: var(--tertiary);
  }

  .hidden-badge {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-xxs);
    color: var(--tertiary);
    border: 1px solid var(--line);
    padding: 0.1rem 0.5rem;
    border-radius: 3px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .article-title {
    font-family: 'Source Serif 4', serif;
    font-size: var(--fs-h2);
    font-weight: 700;
    margin-bottom: 0.8rem;
    color: var(--white);
    transition: color 0.3s;
    line-height: 1.3;
  }

  .article-link:hover .article-title {
    color: var(--blue-hover);
  }

  .article-excerpt {
    font-family: 'DM Sans', sans-serif;
    color: var(--secondary);
    font-size: var(--fs-body);
    line-height: 1.8;
  }

  .article-time {
    font-family: 'DM Sans', sans-serif;
    font-size: var(--fs-sm);
    color: var(--tertiary);
    margin-top: 0.8rem;
    display: inline-block;
  }

  /* ─── Tablet ─── */
  @media (max-width: 1024px) {
    .blog-list {
      padding: 4rem 1.5rem 6rem;
    }
  }

  /* ─── Mobile ─── */
  @media (max-width: 768px) {
    .blog-list {
      padding: 3rem 1.2rem 4rem;
    }

    .blog-article {
      margin-bottom: 2.5rem;
      padding-bottom: 2.5rem;
    }

  }
</style>